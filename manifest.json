{
  "manifest_version": 2,
  "name": "MyTools",
  "description": "This extension is used with F@W, limited to EVRY employees.",
  "version": "1.0.1",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png" },
  "browser_action": {
    "default_title": "No action here"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
